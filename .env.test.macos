# macOS-specific test configuration
# Uses SQLite with optimized settings to prevent segmentation faults
KERNEL_CLASS='App\Kernel'
APP_SECRET='$ecretf0rt3st'
DATABASE_URL="sqlite:///%kernel.project_dir%/data/database_test_macos.sqlite"

# Completely disable DAMA Doctrine Test Bundle for macOS
DAMA_DOCTRINE_TEST_BUNDLE_ENABLED=false

# Disable deprecations to prevent additional memory overhead
SYMFONY_DEPRECATIONS_HELPER=disabled

# PHP memory limit increase for macOS to prevent segfaults
MEMORY_LIMIT=512M

# SQLite optimizations for macOS stability
SQLITE_JOURNAL_MODE=WAL
SQLITE_SYNCHRONOUS=OFF
SQLITE_TEMP_STORE=MEMORY